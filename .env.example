# Cloud keys
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# Optional config
DEEPGRAM_MODEL=nova-2-general

# Local backend: faster | mlx
LOCAL_BACKEND=mlx

# Whisper config (used by both backends where relevant)
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
WHISPER_CPU_THREADS=8
WHISPER_NUM_WORKERS=1
WHISPER_BEAM_SIZE=1
WHISPER_BEST_OF=1
WHISPER_TEMPERATURE=0.0
WHISPER_LANGUAGE=en

# MLX-specific
MLX_MODEL=small

# Audio and segmentation
LOCAL_BUFFER_SECONDS=1.5
LOCAL_STRIDE_SECONDS=1.0
MIC_LEVEL_DB_MIN=-60
MIC_LEVEL_DB_MAX=-12
MIC_LEVEL_SMOOTHING=0.2
VAD_DB_SILENCE=-45
VAD_MIN_SIL_MS=500
UTTERANCE_MIN_MS=500
UTTERANCE_MAX_MS=7000
